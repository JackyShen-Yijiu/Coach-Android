<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.blackcat.coach.widgets.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:sriv_border_color="#00000000"
        app:sriv_border_width="1dip"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:id="@+id/item_study_confirm_parent_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_avatar_small"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_marginBottom="@dimen/margin_16"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/item_study_confirm_parent_name"
        android:layout_alignTop="@+id/item_study_confirm_parent_icon"
        android:layout_toRightOf="@+id/item_study_confirm_parent_icon"
        android:layout_toEndOf="@+id/item_study_confirm_parent_icon"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="14dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/item_study_confirm_parent_time"
        android:layout_marginTop="12dp"
        android:layout_alignBottom="@+id/item_study_confirm_parent_icon"
        android:layout_toRightOf="@+id/item_study_confirm_parent_icon"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="14dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_study_confirm_parent_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"

        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/ic_arrow_down"
        />

</RelativeLayout>