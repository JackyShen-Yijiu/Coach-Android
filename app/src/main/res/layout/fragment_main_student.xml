<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/new_bg_gray"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/fragment_main_student_rg"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="科目一"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_studycontent_textcolor"
            android:background="@drawable/selector_study_left"
            android:id="@+id/fragment_main_student_rb1"
            android:checked="true" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="科目二"
            android:gravity="center"
            android:textColor="@drawable/selector_studycontent_textcolor"
            android:button="@null"
            android:background="@drawable/selector_study_contents"
            android:layout_weight="1"
            android:layout_marginLeft="-2dp"
            android:id="@+id/fragment_main_student_rb2"
            android:checked="false" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="科目三"
            android:gravity="center"
            android:textColor="@drawable/selector_studycontent_textcolor"
            android:button="@null"
            android:background="@drawable/selector_study_contents"
            android:layout_weight="1"
            android:layout_marginLeft="-2dp"
            android:id="@+id/fragment_main_student_rb3"
            android:checked="false" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="科目四"
            android:gravity="center"
            android:textColor="@drawable/selector_studycontent_textcolor"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/selector_study_right"
            android:id="@+id/fragment_main_student_rb4"
            android:layout_marginLeft="-2dp"
            android:checked="false" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_main_student_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    </FrameLayout>

</LinearLayout>