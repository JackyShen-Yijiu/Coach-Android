<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white_absolute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"

        >

        <TextView
            android:id="@+id/calendar_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年3月"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/schedule_triangle_left"
            android:drawableRight="@mipmap/schedule_triangle_right"/>

        <ImageView
            android:id="@+id/calendar_stop_expand_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/schedule_fold_up"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <sun.bob.mcalendarview.views.WeekColumnView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/pop_schedule_calendar_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>


    <!--<sun.bob.mcalendarview.views.ExpCalendarView-->
