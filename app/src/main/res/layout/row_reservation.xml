<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_default_background">

    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e6e6e6" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_avatar_small" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_toRightOf="@+id/iv_avatar"

        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_name"
            android:textColor="#999999"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="12sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/iv_avatar"
        android:layout_marginLeft="15dp"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <!--<TextView-->
    <!--android:id="@+id/tv_time_range"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/divider"-->
    <!--android:layout_marginRight="8dp"-->
    <!--android:layout_marginTop="15dp"-->
    <!--android:layout_toRightOf="@+id/tv_date"-->
    <!--android:text="13:00-18:00"-->
    <!--android:textColor="#333333"-->
    <!--android:textSize="14sp" />-->

    <TextView
        android:id="@+id/tv_train_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_train_field"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:text=""
        android:textSize="14sp" />

    <View
        android:id="@+id/divider_bottom1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_place"
        android:background="#e6e6e6" />

    <View
        android:id="@+id/divider_bottom2"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_below="@+id/divider_bottom1"
        android:background="@color/list_divider2" />

    <ImageView
        android:id="@+id/status_line"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_bottom1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/divider_top"
        android:visibility="gone"
        android:background="@color/text_blue" />
</RelativeLayout>