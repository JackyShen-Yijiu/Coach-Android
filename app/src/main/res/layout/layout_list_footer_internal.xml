<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/load_more_footer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/pb_load_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_loading_page"
        android:padding="3dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_no_more_data"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/pb_load_more"
        android:layout_alignTop="@+id/pb_load_more"
        android:gravity="center"
        android:text="@string/no_more_data"
        android:textColor="@color/pull_refresh_time_color"
        android:visibility="invisible" />

</RelativeLayout>