<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_pure"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_image_h"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_avatar_large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="7dp"
            android:text="ID "
            android:textColor="@color/text_999"
            android:textSize="12sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_id"
            android:layout_marginTop="17dp"
            android:background="@color/list_divider" />

        <TextView
            android:id="@+id/tv_car_info_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="17dp"
            android:text="学车信息"
            android:textColor="@color/text_333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_info_hint"
            android:layout_marginTop="13dp"
            android:text="报考驾校："
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_school_name"
            android:layout_marginTop="7dp"
            android:text="车  型："
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_progress_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_type"
            android:layout_marginTop="7dp"
            android:text="学车进度："
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_type"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv_progress_hint"
            android:singleLine="true"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_progress_hint"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:text="常用地址："
            android:textColor="@color/text_333"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_place"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="17dp"
            android:background="@color/list_divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:text="教练评论"
            android:textColor="@color/text_333"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>