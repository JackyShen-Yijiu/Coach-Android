<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackcat.coach.activities.AboutActivity">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:drawablePadding="8dp"
        android:drawableTop="@mipmap/ic_logo"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="#FF6633"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="做有态度的驾校培训"
        android:textColor="@color/text_999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_slogan"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Copyright@2015-2016 All Rights Reserved"
        android:textColor="@color/text_999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_proto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="许可服务协议"
        android:textColor="@color/text_blue"
        android:textSize="13sp" />
</RelativeLayout>
