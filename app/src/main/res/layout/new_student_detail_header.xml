<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@mipmap/student_background"
    android:layout_height="90dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#ceecff"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/new_main_colors"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="C1全周班"/>
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_phone"
            android:padding="8dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/chat"/>
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/phone" />
    </RelativeLayout>
    <com.blackcat.coach.widgets.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        app:sriv_border_color="#00000000"
        app:sriv_border_width="1dip"
        android:layout_marginTop="6dp"
        android:src="@mipmap/ic_avatar_small"/>
</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_title_iv"
        android:layout_width="match_parent"
        android:background="@mipmap/progress_bar0"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/new_txt_lights"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/new_txt_lights"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/new_txt_lights"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/new_txt_lights"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp">


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/new_txt_blacks"
            android:text="学车进度"/>
        <TextView
            android:id="@+id/tv_subject_progress"
            android:layout_width="wrap_content"
            android:text="科目二"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_1"
            android:textColor="@color/new_txt_lights"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_subject_content"
            android:layout_width="wrap_content"
            android:text="上车起步"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/new_txt_blacks"
            android:layout_toRightOf="@+id/tv_subject_progress"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">
    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:src="@mipmap/study_time"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_time"
            android:layout_marginLeft="36dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/guiding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/new_txt_lights"
            android:text="规定:0课时"/>
            <TextView
                android:id="@+id/wancheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/guiding"
                android:textColor="@color/new_txt_lights"
                android:text="已完成:0课时"/>
            <TextView
                android:id="@+id/goumai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/guiding"
                android:layout_marginTop="8dp"
                android:textColor="@color/new_txt_lights"
                android:text="购买:0课时"/>
            <TextView
                android:id="@+id/yixue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/goumai"
                android:layout_alignBottom="@+id/goumai"
                android:textColor="@color/new_txt_lights"
                android:text="已学:0课时"/>

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg">
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:textColor="@color/new_txt_blacks"
            android:text="常用地址"/>
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_2"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="@color/new_txt_lights"
            android:text="常用地址"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/new_txt_blacks"
                android:text="考试信息"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

        <TextView
            android:id="@+id/exam_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/new_txt_blacks"
            android:text="科目一"/>
        <TextView
            android:id="@+id/exam_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/new_txt_blacks"
            android:layout_toRightOf="@+id/exam_subject"
            android:text="3月考试2"/>
        <TextView
            android:id="@+id/exam_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/new_reds"
            android:text="通过"/>
        <TextView
            android:id="@+id/exam_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/new_txt_lights"
            android:layout_toLeftOf="@+id/exam_pass"
            android:text="94分"/>
</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/exam_subject_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/new_txt_blacks"
                android:text="科目二"/>
            <TextView
                android:id="@+id/exam_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_blacks"
                android:layout_toRightOf="@+id/exam_subject_2"
                android:text="3月考试2"/>
            <TextView
                android:id="@+id/exam_pass_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/new_reds"
                android:text="通过"/>
            <TextView
                android:id="@+id/exam_grade_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_lights"
                android:layout_toLeftOf="@+id/exam_pass_2"
                android:text="94分"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/exam_subject_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/new_txt_blacks"
                android:text="科目三"/>
            <TextView
                android:id="@+id/exam_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_blacks"
                android:layout_toRightOf="@+id/exam_subject_3"
                android:text="3月考试2"/>
            <TextView
                android:id="@+id/exam_pass_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/new_reds"
                android:text="通过"/>
            <TextView
                android:id="@+id/exam_grade_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_lights"
                android:layout_toLeftOf="@+id/exam_pass_3"
                android:text="94分"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/exam_subject_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/new_txt_blacks"
                android:text="科目四"/>
            <TextView
                android:id="@+id/exam_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_blacks"
                android:layout_toRightOf="@+id/exam_subject_4"
                android:text="3月考试2"/>
            <TextView
                android:id="@+id/exam_pass_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/new_reds"
                android:text="通过"/>
            <TextView
                android:id="@+id/exam_grade_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/new_txt_lights"
                android:layout_toLeftOf="@+id/exam_pass_4"
                android:text="94分"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/new_txt_blacks"
            android:text="教练评价"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>
</LinearLayout>