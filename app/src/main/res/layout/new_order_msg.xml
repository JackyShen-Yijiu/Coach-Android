<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="time"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#2F7CEF">
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额增加通知"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/money_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/money_msg"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_money"
        android:layout_alignLeft="@+id/tv_money"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:layout_below="@+id/tv_money"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/tv_money"
        />
    <LinearLayout
        android:id="@+id/tv_money_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_content"
        android:background="#bfbfbf"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </LinearLayout>
    <TextView
        android:id="@+id/tv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即查看"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/tv_money_line"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_normal"
        android:layout_alignRight="@+id/money_iv"
        android:layout_alignBottom="@+id/tv_look"/>
    <LinearLayout
        android:id="@+id/tv_money_line_one"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_look"
        android:background="#bfbfbf"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    </LinearLayout>
</RelativeLayout>
</LinearLayout>