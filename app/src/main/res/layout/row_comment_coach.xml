<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_default_background"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_cmt_coach_avatar"
        android:layout_width="@dimen/comment_coach_avatar"
        android:layout_height="@dimen/comment_coach_avatar"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_avatar_small" />

    <TextView
        android:id="@+id/tv_cmt_coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_cmt_coach_avatar"
        android:singleLine="true"
        android:textColor="#333333"
        android:text="name"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/tv_cmt_coach_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="content"
        android:textColor="@color/text_999"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/iv_cmt_coach_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_cmt_coach_ratebar"
        style="@style/roomRatingBar"
        android:layout_alignBottom="@+id/iv_cmt_coach_avatar"
        android:layout_alignParentRight="true"
        android:longClickable="false"
        android:saveEnabled="false"
        android:layout_alignParentEnd="true" />

</RelativeLayout>