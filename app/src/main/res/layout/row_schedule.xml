<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_default_background"
    >

    <RelativeLayout
        android:id="@+id/rl_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_start_time"
            android:layout_marginTop="7dp"
            android:textColor="#999999"
            android:textSize="19sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/rl_time_range"
        android:background="@color/blue" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/divider"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_avatar_small" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_avatar">



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="李燕飞"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_999"
            android:gravity="right"
            android:text="已约24课时"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_toEndOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_learning_item"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="科目二弟22课时"
            android:textColor="@color/text_999"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_learning_item"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:text="官方24课时"
            android:textColor="@color/text_999"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_leave_clss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_999"
            android:gravity="right"
            android:text="剩余23课时"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_miss_clss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_leave_clss"
            android:layout_marginTop="7dp"
            android:textColor="@color/text_999"
            android:gravity="right"
            android:text="漏1课时"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_class_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_999"
            android:layout_below="@+id/tv_name"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"

            android:text="dhgfh"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>