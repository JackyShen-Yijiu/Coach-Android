<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_default_background">

    <RelativeLayout
        android:id="@+id/line_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/line_ll"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/schedule_line_iv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"

            android:background="@color/new_main_colors" />
        <ImageView
            android:id="@+id/schedule_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@mipmap/schedule_item_node_now" />

       <LinearLayout
           android:id="@+id/schedule_time_ll"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#fff"
           android:layout_marginTop="69dp"
           android:gravity="center_horizontal"
           android:orientation="vertical">
           <TextView
               android:id="@+id/schedule_begintime_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:text="09:00"
               android:textColor="@color/new_txt_blacks"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/schedule_endtime_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/schedule_begintime_tv"
               android:layout_marginTop="4dp"
               android:text="10:00"
               android:textColor="@color/new_txt_lights"
               android:textSize="12sp" />
       </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/line_rl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schedule_ordered_student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已约2人"
                android:textColor="@color/new_txt_blues"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/schedule_remain_student_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="剩余名额3人"
                android:textColor="@color/new_txt_blues"
                android:textSize="14sp" />
        </LinearLayout>

        <com.blackcat.coach.widgets.GridVIewInListView
            android:id="@+id/schedule_student_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:cacheColorHint="@null"
            android:listSelector="@android:color/transparent"
            android:numColumns="5">

        </com.blackcat.coach.widgets.GridVIewInListView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="23dp"
            android:background="@color/line_bg" />
    </LinearLayout>

</RelativeLayout>