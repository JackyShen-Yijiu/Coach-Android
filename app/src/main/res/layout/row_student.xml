<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/sl_default_background"
    >

    <View
        android:id="@+id/dividing_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_grey"/>
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/dividing_line"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_avatar_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_below="@+id/dividing_line"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_333"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_student_phone"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_phone"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_999"
            android:layout_alignParentRight="true"
            android:contentDescription="剩余课程数量"
            android:textSize="14sp"
             />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/text_999"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/item_student_rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_missing"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_missing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_999"
                android:layout_alignParentRight="true"
                android:contentDescription="剩余课程数量"
                android:textSize="14sp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
