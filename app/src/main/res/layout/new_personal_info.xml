<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/new_bg_gray"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">

        <RelativeLayout
        android:id="@+id/ic_avatar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="80dp">

        <com.blackcat.coach.widgets.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"
            app:sriv_border_color="#00000000"
            app:sriv_border_width="1dip"
            android:src="@mipmap/ic_avatar_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/more_right"
            android:drawablePadding="8dp"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp"
            android:text="更换头像"/>
    </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:onClick="onClick"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/upload_driver_name"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_height"
            android:layout_marginLeft="@dimen/padding_left"
            android:layout_marginRight="@dimen/padding_left"
            android:background="@color/split_line_color" />
    <RelativeLayout
        android:id="@+id/rl_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/str_sex"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />
    <RelativeLayout
        android:id="@+id/rl_id_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/upload_id_card"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />

    <RelativeLayout
        android:id="@+id/rl_modify_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="手机号码"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:drawableRight="@mipmap/ic_right"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/new_bg_gray" />



    <RelativeLayout
        android:id="@+id/rl_coach_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="教练号"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_coach_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:drawableRight="@mipmap/ic_right"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_driving_license"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:visibility="gone"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/upload_driver_license"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_driver_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:drawableRight="@mipmap/ic_right"
            android:textColor="@color/maintab_text_normal"
            android:textSize="@dimen/profile_text_size" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />

    <RelativeLayout
        android:id="@+id/rl_seniority"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_item_height"
        android:background="@drawable/sl_default_background"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/str_seniority"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_seniority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_left"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />
    <RelativeLayout
        android:id="@+id/rl_job_category"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_default_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="@dimen/padding_left"
            android:text="@string/upload_job_category"
            android:singleLine="true"
            android:textColor="@color/profile_text_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_job_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />
    <RelativeLayout
        android:id="@+id/rl_tech_subject"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_default_background">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:background="@null"
            android:text="@string/tech_subject"
            android:singleLine="true"
            android:textColor="@color/profile_text_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_subjects"
            android:background="@null"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:background="@color/split_line_color" />
    <RelativeLayout
        android:id="@+id/rl_train_field"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/sl_default_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_left"
            android:background="@null"
            android:text="@string/train_field"
            android:singleLine="true"
            android:textColor="@color/profile_text_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_field_right"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_field_right"
            android:layout_width="@dimen/detail_right_size"
            android:layout_height="@dimen/detail_right_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_left"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/rl_self_intro"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
      >

        <TextView
            android:id="@+id/tv_self_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_left"
            android:layout_marginRight="@dimen/padding_right"
            android:layout_marginTop="@dimen/padding_10"
            android:text="@string/str_self"
            android:textColor="@color/profile_text_normal"
            android:textSize="@dimen/profile_text_size" />

        <TextView
            android:id="@+id/tv_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_self_hint"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/tv_self_hint"
            android:maxLines="3"
            android:text=""
            android:ellipsize="end"
            android:textColor="@color/text_999"
            android:textSize="@dimen/text_size_small" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_self_hint"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/ic_right"
            android:textColor="@color/new_txt_lights"
            android:textSize="12sp"
            android:text="编辑"
             />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>