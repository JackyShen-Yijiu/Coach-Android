<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/exam_info_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_txt_blacks"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/exam_info_subject_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_info_time_tv"
            android:layout_marginTop="8dp"
            android:textColor="@color/new_txt_lights"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/exam_info_pass_rate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/new_reds"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/exam_info_pass_rate_tv"
            android:layout_marginTop="8dp"
            android:text="通过率"
            android:textColor="@color/new_txt_lights"
            android:textSize="@dimen/text_size_middle" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报考"
                android:textColor="@color/new_txt_lights"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/exam_info_apply_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/new_txt_lights"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="@color/line_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺考"
                android:textColor="@color/new_txt_lights"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/exam_info_miss_exam_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/new_txt_lights"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="@color/line_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通过"
                android:textColor="@color/new_txt_blues"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/exam_info_pass_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/new_txt_blues"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <RelativeLayout
        android:id="@+id/exam_info_pass_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f7f7f7"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/exam_info_not_pass_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/new_txt_blacks"
            android:textSize="@dimen/text_size_middle" />

        <ImageView
            android:id="@+id/exam_info_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_down" />
    </RelativeLayout>

    <com.blackcat.coach.widgets.ListViewInListView
        android:id="@+id/exam_info_listview"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content">

    </com.blackcat.coach.widgets.ListViewInListView>
</LinearLayout>