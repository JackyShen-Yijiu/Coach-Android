<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blackcat.coach.activities.PersonalInfoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_avatar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/profile_text_size" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/profile_text_size" />
                </LinearLayout>

                <ImageView

                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_avatar_small" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="@dimen/detail_right_size"
                    android:layout_height="@dimen/detail_right_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_right" />

            </RelativeLayout>


            <ImageView

                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_right"
                android:scaleType="centerCrop"
                android:id="@+id/ic_avatar"
                android:onClick="onClick"
                android:src="@mipmap/ic_avatar_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="15dp"
                android:background="@color/split_line_color" />



            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:onClick="onClick"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/upload_driver_name"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />
            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/str_sex"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />
            <RelativeLayout
                android:id="@+id/rl_id_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/upload_id_card"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />

            <RelativeLayout
                android:id="@+id/rl_modify_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical"
                android:onClick="onClick">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/str_phone_num"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />

            <RelativeLayout
                android:id="@+id/rl_coach_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/str_coach_num"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_coach_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_driving_license"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/upload_driver_license"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_driver_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />

            <RelativeLayout
                android:id="@+id/rl_seniority"
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:background="@drawable/sl_default_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/str_seniority"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_seniority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:drawableRight="@mipmap/ic_right"
                    android:textColor="@color/maintab_text_normal"
                    android:textSize="@dimen/profile_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />
            <RelativeLayout
                android:id="@+id/rl_job_category"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/sl_default_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:text="@string/upload_job_category"
                    android:singleLine="true"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_job_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_job_category"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_job_category"
                    android:layout_width="@dimen/detail_right_size"
                    android:layout_height="@dimen/detail_right_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/padding_left"
                    android:src="@mipmap/ic_right" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />
            <RelativeLayout
                android:id="@+id/rl_train_field"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/sl_default_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:background="@null"
                    android:text="@string/train_field"
                    android:singleLine="true"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_field_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_field_right"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_field_right"
                    android:layout_width="@dimen/detail_right_size"
                    android:layout_height="@dimen/detail_right_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/padding_left"
                    android:src="@mipmap/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />

            <RelativeLayout
                android:id="@+id/rl_work_time"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/sl_default_background">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:background="@null"
                    android:text="@string/work_time"
                    android:singleLine="true"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_work_time_img"
                    android:background="@null"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_work_time_img"
                    android:layout_width="@dimen/detail_right_size"
                    android:layout_height="@dimen/detail_right_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:src="@mipmap/ic_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:layout_marginLeft="@dimen/padding_left"
                android:background="@color/split_line_color" />

            <RelativeLayout
                android:id="@+id/rl_tech_subject"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/sl_default_background">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:background="@null"
                    android:text="@string/tech_subject"
                    android:singleLine="true"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_subjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_subjects"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_subjects"
                    android:layout_width="@dimen/detail_right_size"
                    android:layout_height="@dimen/detail_right_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_left"
                    android:src="@mipmap/ic_right" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.blackcat.coach.widgets.WordWrapView
                android:id="@+id/view_wordwrap"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                >

            </com.blackcat.coach.widgets.WordWrapView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_line_height"
                android:background="@color/split_line_color" />

            <LinearLayout
                android:id="@+id/rl_self_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_16"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_self_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:layout_marginRight="@dimen/padding_right"
                    android:layout_marginTop="@dimen/padding_10"
                    android:text="@string/str_self"
                    android:textColor="@color/profile_text_normal"
                    android:textSize="@dimen/profile_text_size" />

                <TextView
                    android:id="@+id/tv_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/padding_left"
                    android:layout_marginRight="@dimen/padding_right"
                    android:layout_marginTop="@dimen/padding_10"
                    android:maxLines="3"
                    android:text="各适量的"
                    android:textColor="@color/text_999"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
